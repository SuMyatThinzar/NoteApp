<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_card_medium_2"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_card_medium_2"
            android:singleLine="true"
            android:text="Heading"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/margin_card_medium_n"
            android:layout_marginBottom="@dimen/margin_card_medium_n"
            android:paddingStart="@dimen/margin_card_medium_2"
            android:paddingEnd="@dimen/margin_medium_2"
            android:src="@drawable/background_line_white" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:maxLines="5"
            android:padding="@dimen/margin_card_medium_2"
            android:text="Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents Contents "
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvContent"
            android:maxLines="5"
            android:paddingStart="@dimen/margin_card_medium_2"
            android:paddingEnd="@dimen/margin_medium_2"
            android:paddingBottom="@dimen/margin_medium_2"
            android:text="July 16, 2023"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small" />

        <ImageView
            android:id="@+id/ivChecked"
            android:layout_width="@dimen/margin_xxlarge"
            android:layout_height="@dimen/margin_xxlarge"
            android:padding="@dimen/margin_card_medium_2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_checked"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>